   <children>
      <ComboBox fx:id="comboBoxPerson" layoutX="28.0" layoutY="50.0" onAction="#onComboBoxPersonAction" prefWidth="150.0" promptText="Select a person" />
      <ButtonBar layoutX="240.0" layoutY="46.0" prefHeight="34.0" prefWidth="73.0">
        <buttons>
          <Button fx:id="btAll" minWidth="26.0" mnemonicParsing="false" onAction="#onBtAllAction" prefHeight="25.0" text="All" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
